  <body>

    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="masthead clearfix">
            <div class="inner">
              <h3 class="masthead-brand" id="dateRead"><%= date %></h3>
              <nav>
                <ul class="nav masthead-nav">
                  <li class="active"><a href="/interface">Edit</a></li>
                </ul>
              </nav>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4" id="todayhw">
              <h1 class="text-primary">今日作業</h1>
            </div>
            <div class="col-md-4" id="tomorrowbring">
              <h1 class="text-primary">明天要帶</h1>
            </div>
            <div class="col-md-4" id="tomorrowtest">
              <h1 class="text-primary">明天要考</h1>
            </div>
