    <script src="javascripts/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="javascripts/ie10-viewport-bug-workaround.js"></script>
    <script>
      var date = $('#dateRead').text();
      console.log('date is ' + date);
      $.ajax({
        method: "GET",
        url: "api/v1/todo?date=" + date
      })
        .done(function(data) {
          // alert(data);

          console.log(data);
          var hwArray = data.result.hw.split('\n');
          for (var i = 0; i < hwArray.length; i++) {
            // hwArray[i]
            $( "#todayhw" ).append( "<h2>" + hwArray[i] + "</h2>" );
          }

          var tobringArray = data.result.toBring.split('\n');
          for (var i = 0; i < tobringArray.length; i++) {
            // tobringArray[i]
            $( "#tomorrowbring" ).append( "<h2>" + tobringArray[i] + "</h2>" );
          }

          var testArray = data.result.test.split('\n');
          for (var i = 0; i < testArray.length; i++) {
            // testArray[i]
            $( "#tomorrowtest" ).append( "<h2>" + testArray[i] + "</h2>" );
          }
          // console.log(hwArray);
          // $("#todayhw").text(data.result.hw);
          // console.log(data.result.hw);
          // alert(data.result.hw);
          // $("#tomorrowbring").text(data.result.toBring);
          // $("#tomorrowtest").text(data.result.test);
        })
        .fail(function(data) {
          // alert("fail");
          console.log(data);
          $("#todayhw").text("");
          $("#tomorrowbring").text("Loading data fail !!!");
          $("#tomorrowtest").text("");
        });
    </script>
  </body>
